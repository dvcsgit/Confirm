@model Customized.PFG.CN.Models.AbnormalHanding.ReportModel

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SearchResults
        </h5>
        <div class="widget-toolbar">
            <div class="widget-menu">
                <a href="#" data-toggle="dropdown">
                    <i class="ace-icon fa fa-cloud-download white"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right dropdown-caret dropdown-closer dropdown-warning">
                    <li>
                        <a href="@Url.Action("Export", new { ExcelVersion = Utility.Define.EnumExcelVersion._2003})">Excel 2003</a>
                    </li>

                    <li>
                        <a href="@Url.Action("Export", new { ExcelVersion = Utility.Define.EnumExcelVersion._2007 })">Excel 2007</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:600px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th rowspan="2" class="center">@Resources.Resource.Item</th>
                        <th rowspan="2" class="center">@Resources.Resource.CheckDate</th>
                        <th rowspan="2" class="center">@Resources.Resource.CheckTime</th>
                        <th rowspan="2" class="center">@Resources.Resource.Route</th>
                        <th rowspan="2" class="center">@Resources.Resource.ControlPoint</th>
                        <th rowspan="2" class="center">@Resources.Resource.Equipment</th>
                        <th rowspan="2" class="center">@Resources.Resource.PartName</th>
                        <th rowspan="2" class="center">@Resources.Resource.CheckItem</th>
                        <th rowspan="2" class="center">@Resources.Resource.AbnormalReason</th>
                        <th rowspan="2" class="center">@Resources.Resource.HandlingMethod</th>
                        <th rowspan="2" class="center">@Resources.Resource.CheckUser</th>
                        <th rowspan="2" class="center">@Resources.Resource.Remark</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="center">@item.No</td>
                            <td class="center">@item.CheckDate</td>
                            <td class="center">@item.CheckTime</td>
                            <td class="center">@item.Route</td>
                            <td class="center">@item.ControlPointDescription</td>
                            <td class="center">@item.EquipmentDescription</td>
                            <td class="center">@item.PartDescription</td>
                            <td class="center">@item.CheckItemDescription</td>
                            <td class="center">@item.AbnormalReasonDescription</td>
                            <td class="center">@item.HandingMethod</td>
                            <td class="center">@item.ArriveRecord</td>
                            <td class="center">@item.Remark</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
   
</div>

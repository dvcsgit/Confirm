@model Models.TankPatrol.MobileRelease.GridViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SoftwareDownload
        </h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow-x:scroll;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1 center">@Resources.Resource.Download</th>
                        <th>@Resources.Resource.Device</th>
                        <th>@Resources.Resource.Version</th>
                        <th>@Resources.Resource.ReleaseDate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                <div class="action-buttons">
                                    @if (ViewBag.CanDownload)
                                    {
                                        <a class="purple" href="@Url.Action("FileDownload", new { ID = item.ID })"  title="@Resources.Resource.Download">
                                            <i class="ace-icon fa fa-cloud-download bigger-130"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                            <td>@item.Device</td>
                            <td>@item.VerName</td>
                            <td>@item.ReleaseDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

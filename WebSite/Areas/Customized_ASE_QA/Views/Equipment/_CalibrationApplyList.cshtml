@model Models.ASE.QA.CalibrationApply.GridItem

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.CalibrationApply
        </h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:500px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="center"></th>
                        <th class="center">@Resources.Resource.VHNO</th>
                        <th class="center">@Resources.Resource.Status</th>
                        <th>廠別</th>
                        <th>@Resources.Resource.Department</th>
                        <th>@Resources.Resource.SerialNo</th>
                        <th>@Resources.Resource.IchiName</th>
                        <th class="center">免校驗</th>
                        <th class="center">@Resources.Resource.Calibration</th>
                        <th class="center">@Resources.Resource.MSA</th>
                        <th>@Resources.Resource.Brand</th>
                        <th>@Resources.Resource.Model</th>
                        <th>@Resources.Resource.CreateTime</th>
                        <th>@Resources.Resource.CreateUser</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="center">
                            <div class="action-buttons">
                                <a class="blue" onclick="CalibrationApply('@Model.UniqueID')" title="@Resources.Resource.Detail">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                            </div>
                        </td>
                        <td class="center">@Model.VHNO</td>
                        <td class="center">
                            @if (Model.Status.Status == "1")
                            {
                                <span class="label label-lg label-purple arrowed-right">@Model.Status.Display</span>
                            }
                            else if (Model.Status.Status == "0" || Model.Status.Status == "2")
                            {
                                <span class="label label-lg label-danger arrowed-right">@Model.Status.Display</span>
                            }
                            else if (Model.Status.Status == "3")
                            {
                                <span class="label label-lg label-success arrowed-right">@Model.Status.Display</span>
                            }
                            else
                            {
                                <span>@Model.Status.Display</span>
                            }
                        </td>
                        <td>@Model.Factory</td>
                        <td>@Model.Department</td>
                        <td>@Model.SerialNo</td>
                        <td>@Model.Ichi</td>
                        <td class="center">
                            @if (!Model.CAL && !Model.MSA)
                            {
                                <i class="ace-icon fa fa-check bigger-110 red"></i>
                            }
                        </td>
                        <td class="center">
                            @if (Model.CAL)
                            {
                                <i class="ace-icon fa fa-check bigger-110 red"></i>
                            }
                        </td>
                        <td class="center">
                            @if (Model.MSA)
                            {
                                <i class="ace-icon fa fa-check bigger-110 red"></i>
                            }
                        </td>
                        <td>@Model.Brand</td>
                        <td>@Model.Model</td>
                        <td>@Model.CreateTimeString</td>
                        <td>@Model.Creator</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@model Models.ASE.QA.AbnormalForm.GridViewModel

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.CalibrationAbnormalForm
        </h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:500px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1 center"></th>
                        <th>@Resources.Resource.Status</th>
                        <th>廠別</th>
                        <th>@Resources.Resource.Department</th>
                        <th>@Resources.Resource.SerialNo</th>
                        <th>@Resources.Resource.IchiName</th>
                        <th>@Resources.Resource.Brand</th>
                        <th>@Resources.Resource.Model</th>
                        <th>@Resources.Resource.Calibrator</th>
                        <th>@Resources.Resource.CalibrateDate</th>
                        <th>@Resources.Resource.CreateTime</th>
                        <th>@Resources.Resource.EquipmentOwner</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    { 
                    <tr>
                        <td class="center">
                            @if (item.Status == "1" && item.OwnerID == (Session["Account"] as Models.Authenticated.Account).ID)
                            {
                                <div class="action-buttons">
                                    <a class="green" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Edit">
                                        <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a>
                                </div>
                            }
                            @*else if (item.Status == "3" && string.IsNullOrEmpty(item.FlowVHNO) && item.PEID == (Session["Account"] as Models.Authenticated.Account).ID)
                            {
                                <div class="action-buttons">
                                    <a class="green" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Edit">
                                        <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a>
                                </div>
                            }*@
                            else
                            {
                                <div class="action-buttons">
                                    <a class="blue" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Detail">
                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                    </a>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Status == "1")
                            {
                                <span class="label label-lg label-danger arrowed-right">@item.StatusDescription</span>
                            }
                            else if (item.Status == "2")
                            {
                                <span class="label label-lg label-primary arrowed-right">@item.StatusDescription</span>
                            }
                            else if (item.Status == "3" || item.Status == "5" || item.Status == "6")
                            {
                                <span class="label label-lg label-warning arrowed-right">@item.StatusDescription</span>
                            }
                            else if (item.Status == "4")
                            {
                                <span class="label label-lg label-success arrowed-right">@item.StatusDescription</span>
                            }
                            else
                            {
                                <span>@item.StatusDescription</span>
                            }
                        </td>
                        <td>@item.Factory</td>
                        <td>@item.OrganizationDescription</td>
                        <td>@item.SerialNo</td>                    
                        <td>@item.IchiName</td>               
                        <td>@item.Brand</td>
                        <td>@item.Model</td>
                        <td>@item.Calibrator</td>
                        <td>@item.CalibrateDateString</td>
                        <td>@item.CreateTimeTimeString</td>
                        <td>@item.Owner</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






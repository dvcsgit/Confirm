@model Models.ASE.QA.CalibrationForm.EditFormModel

@if (Model.CalibrateUnit == "L")
{
    <div class="widget-header">
        <h5 class="widget-title">儀器收發件紀錄</h5>
        @if (Model.StepLogList.Count == 0)
        {
            if (Model.CalibrateType == "EF")
            {
                <div class="widget-toolbar">
                <a href="#" onclick="CreateStepLog('5', '@Model.CalibrateUnit'); return false;">
                    <i class="ace-icon fa fa-plus white"></i>
                </a>
            </div>
            }
            else
            { 
            <div class="widget-toolbar">
                <a href="#" onclick="CreateStepLog('1', '@Model.CalibrateUnit'); return false;">
                    <i class="ace-icon fa fa-plus white"></i>
                </a>
            </div>
            }
        }
        else
        {
            var last = Model.StepLogList.OrderByDescending(x => x.Seq).First();

            if (last.Step == "1")
            {
                if (Model.CalibrateType == "EL")
                {
                    <div class="widget-toolbar">
                        <div class="widget-menu">
                            <a href="#" data-toggle="dropdown">
                                <i class="ace-icon fa fa-plus white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right dropdown-caret dropdown-closer dropdown-warning">
                                <li>
                                    <a href="#" onclick="CreateStepLog('2', '@Model.CalibrateUnit'); return false;">送件</a>
                                </li>

                                <li>
                                    <a href="#" onclick="CreateStepLog('4', '@Model.CalibrateUnit'); return false;">取件</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="widget-toolbar">
                        <a href="#" onclick="CreateStepLog('4', '@Model.CalibrateUnit'); return false;">
                            <i class="ace-icon fa fa-plus white"></i>
                        </a>
                    </div>
                }
            }
            else if (last.Step == "2")
            {
                <div class="widget-toolbar">
                    <a href="#" onclick="CreateStepLog('3', '@Model.CalibrateUnit'); return false;">
                        <i class="ace-icon fa fa-plus white"></i>
                    </a>
                </div>
            }
            else if (last.Step == "3")
            {
                <div class="widget-toolbar">
                    <a href="#" onclick="CreateStepLog('4', '@Model.CalibrateUnit'); return false;">
                        <i class="ace-icon fa fa-plus white"></i>
                    </a>
                </div>
            }
            else if (last.Step == "4")
            {
                <div class="widget-toolbar">
                    <a href="#" onclick="CreateStepLog('1', '@Model.CalibrateUnit'); return false;">
                        <i class="ace-icon fa fa-plus white"></i>
                    </a>
                </div>
            }
        }
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow-x:scroll; min-height:150px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th></th>
                        <th>類別</th>
                        <th>時間</th>
                        <th colspan="2">人員</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.StepLogList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                @if (Model.StepLogList.IndexOf(item) == Model.StepLogList.Count - 1 || item.Step=="5")
                                {
                                    <div class="action-buttons">
                                        <a class="red" href="#" onclick="DeleteStepLog('@item.Seq'); return false;" title="@Resources.Resource.Delete">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>
                                }

                            </td>
                            <td>@item.StepDescription</td>
                            <td>@item.TimeString</td>
                            <td>@item.OwnerDisplay</td>
                            <td>@item.QADisplay</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
}

@if (Model.CalibrateUnit == "F")
{
    <div class="widget-header">
        <h5 class="widget-title">儀器收發件紀錄</h5>
        @if (Model.StepLogList.Count == 0)
        {
            if (Model.CalibrateType == "EF")
            {
                <div class="widget-toolbar">
                    <a href="#" onclick="CreateStepLog('5', '@Model.CalibrateUnit'); return false;">
                        <i class="ace-icon fa fa-plus white"></i>
                    </a>
                </div>
            }
            else
            {
            <div class="widget-toolbar">
                <a href="#" onclick="CreateStepLog('2', '@Model.CalibrateUnit'); return false;">
                    <i class="ace-icon fa fa-plus white"></i>
                </a>
            </div>
            }
        }
        else
        {
            var last = Model.StepLogList.OrderByDescending(x => x.Seq).FirstOrDefault();

            if (last.Step == "2")
            {
                <div class="widget-toolbar">
                    <a href="#" onclick="CreateStepLog('3', '@Model.CalibrateUnit'); return false;">
                        <i class="ace-icon fa fa-plus white"></i>
                    </a>
                </div>
            }
        }
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow-x:scroll; min-height:150px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th></th>
                        <th>類別</th>
                        <th>時間</th>
                        <th>人員</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.StepLogList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                @if (Model.StepLogList.IndexOf(item) == Model.StepLogList.Count - 1 || item.Step=="5")
                                {
                                    <div class="action-buttons">
                                        <a class="red" href="#" onclick="DeleteStepLog('@item.Seq'); return false;" title="@Resources.Resource.Delete">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>
                                }
                            </td>
                            <td>@item.StepDescription</td>
                            <td>@item.TimeString</td>
                            <td>@item.OwnerDisplay</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
}

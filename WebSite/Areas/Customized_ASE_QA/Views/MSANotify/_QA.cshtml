                                    {
                                        <option value="@comment.Description">@comment.Description</option>
                                    }
                                    <option value="@Utility.Define.OTHER">@Resources.Resource.Other</option>
                                </select>
                                @Html.TextBoxFor(x => x.FormInput.Comment, new { @class = "col-sm-5" })
                            </td>

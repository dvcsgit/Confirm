                        <td colspan="3">@Html.DisplayFor(x => x.FormViewModel.MSACharacteristicDisplay)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-1">@Html.LabelFor(x => x.FormViewModel.MSAResponsor)</th>

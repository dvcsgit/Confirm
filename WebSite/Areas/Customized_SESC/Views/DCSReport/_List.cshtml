@model Customized.SESC.Models.DCSReport.ReportModel

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
           @Model.Date @Model.RouteName 
        </h5>
        <div class="widget-toolbar">
            <div class="widget-menu">
                <a href="#" data-toggle="dropdown">
                    <i class="ace-icon fa fa-cloud-download white"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right dropdown-caret dropdown-closer dropdown-warning">
                    <li>
                        <a href="@Url.Action("Export", new { ExcelVersion = Utility.Define.EnumExcelVersion._2003})">Excel 2003</a>
                    </li>

                    <li>
                        <a href="@Url.Action("Export", new { ExcelVersion = Utility.Define.EnumExcelVersion._2007 })">Excel 2007</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:600px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th>項次</th>
                        <th>設備名稱</th>
                        <th>比對項目</th>
                        <th>單位</th>
                        <th>DCS錶計編號</th>
                        <th>DCS數值【1】</th>
                        <th>現場錶計編號</th>
                        <th>現場數值【2】</th>
                        <th>誤差值【1】減【2】</th>
                        <th>誤差管理值【1】減【2】</th>
                        <th>故障維修工單編號</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    { 
                        <tr>
                            <td>@item.No</td>
                            <td>@item.EquipmentName</td>
                            <td>@item.CheckItemDisplay</td>
                            <td>@item.Unit</td>
                            <td>@item.DCSCheckItemID</td>
                            <td>@item.DCSValue</td>
                            <td>@item.FactoryCheckItemID</td>
                            <td>@item.FactoryValue</td>
                            <td>@item.Diff</td>
                            <td>@item.Limit</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

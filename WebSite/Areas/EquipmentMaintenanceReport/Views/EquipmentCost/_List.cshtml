@model Report.EquipmentMaintenance.Models.EquipmentCost.GridViewModel

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SearchResults
        </h5>
        <div class="widget-toolbar">
            <div class="widget-menu">
                <a href="#" data-toggle="dropdown">
                    <i class="ace-icon fa fa-cloud-download white"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right dropdown-caret dropdown-closer dropdown-warning">
                    <li>
                        <a href="@Url.Action("Export", new { ExcelVersion = Utility.Define.EnumExcelVersion._2003})">Excel 2003</a>
                    </li>

                    <li>
                        <a href="@Url.Action("Export", new { ExcelVersion = Utility.Define.EnumExcelVersion._2007 })">Excel 2007</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:500px;">
            <table class="table table-striped table-bordered table-hover nowrap">

                <tr>
                    <th>@Resources.Resource.MaintenanceCostTimeTotal</th>
                    <td colspan="2">@Model.GridItem.MaintenanceCostTotal</td>
                    <th>@Resources.Resource.RepairCostTimeTotal</th>
                    <td colspan="2">@Model.GridItem.RepairCostTotal</td>
                </tr>


              
                    <tr>
                        <th>@Resources.Resource.MaterialID</th>
                        <th>@Resources.Resource.MaterialName</th>
                        <th>@Resources.Resource.MaterialSpec</th>
                        <th>@Resources.Resource.MaterialPrice</th>
                        <th>@Resources.Resource.ReplaceQTY</th>
                        <th>@Resources.Resource.MaterialTotalPrice</th>
                    </tr>
              
                <tbody>

                  

                @foreach (var item in Model.GridItem.EquipmentCostList)
                {
                    <tr>
                        <td>@item.MaterialID</td>
                        <td>@item.MaterialName</td>
                        <td>@item.MaterialSpecValueMaterialStandard</td>
                        <td>@item.MaterialPrice</td>
                        <td>@item.MaterialChageNumber</td>
                        <td>@item.MaterialTotalPrice</td>
                    </tr>
                }
                <tr>
                    <td colspan="5" style="text-align:center">
                        @Resources.Resource.Total
                    </td>
                    <td>
                        @Model.GridItem.TotalPrice
                    </td>

                </tr>

            </tbody>
        </table>
    </div>
</div>
</div>

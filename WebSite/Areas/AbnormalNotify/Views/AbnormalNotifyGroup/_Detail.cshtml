@model Models.AbnormalNotify.AbnormalNotifyGroup.DetailViewModel

<p>
    @if (ViewBag.CanEdit)
    {
        <button class="btn btn-app btn-primary btn-xs" onclick="Edit('@Model.UniqueID');" type="button">
            <i class="ace-icon fa fa-edit bigger-160"></i>
            @Resources.Resource.Edit
        </button>
    }
    
    @if (ViewBag.CanDelete && Model.CanDelete)
    {
        <button class="btn btn-app btn-danger btn-xs" onclick="Delete('@Model.UniqueID');" type="button">
            <i class="ace-icon fa fa-trash bigger-160"></i>
            @Resources.Resource.Delete
        </button>
    }

    <button class="btn btn-app btn-success btn-xs" onclick="Query();" type="button">
        <i class="ace-icon fa fa-ban bigger-160"></i>
        @Resources.Resource.Cancel
    </button>
</p>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="bigger lighter">單位</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            <table class="table table-bordered table-input">
                <tr>
                    <th class="col-sm-1">@Html.LabelFor(x => x.Description)</th>
                    <td class="col-sm-11">@Html.DisplayFor(x => x.Description)</td>
                </tr>
            </table>
        </div>
    </div>
</div>


<div class="space"></div>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title">@Resources.Resource.NotifyUser</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main padding-4">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th>@Resources.Resource.Organization</th>
                        <th>@Resources.Resource.UserID</th>
                        <th>@Resources.Resource.UserName</th>
                        <th>@Resources.Resource.EMail</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.UserList)
                    {
                        <tr>
                            <td>@item.OrganizationDescription</td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="space"></div>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title">副本通知人員</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main padding-4">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th>@Resources.Resource.Organization</th>
                        <th>@Resources.Resource.UserID</th>
                        <th>@Resources.Resource.UserName</th>
                        <th>@Resources.Resource.EMail</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.CCUserList)
                    {
                        <tr>
                            <td>@item.OrganizationDescription</td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


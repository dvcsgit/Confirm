@model Models.ASE.AbnormalNotifyGroup.CreateFormModel

@Html.Partial("_Scripts")

<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#CreateForm");
    });

    function Save() {
        var form = $('#CreateForm');

        if (form.valid()) {
            $.ajax({
                type: "POST",
                cache: false,
                url: '@Url.Action("Create")',
                data: form.serialize(),
                dataType: "json",
                beforeSend: function () { $.Overlay('show'); },
                success: function (data) {
                    $.Overlay('hide');

                    if (data.IsSuccess) {
                        Query();
                        $.SuccessDialog(data.Message);
                    }
                    else {
                        $.ErrorDialog(data.Message);
                    }
                },
                error: function (x, h, r) {
                    $.Overlay('hide');
                    $.ErrorDialog(x.responseText);
                }
            });
        }
    }
</script>

<p>
    <button class="btn btn-app btn-primary btn-xs" onclick="Save();" type="button">
        <i class="ace-icon fa fa-save bigger-160"></i>
        @Resources.Resource.Save
    </button>
    
    <button class="btn btn-app btn-success btn-xs" onclick="Query();" type="button">
        <i class="ace-icon fa fa-ban bigger-160"></i>
        @Resources.Resource.Cancel
    </button>
</p>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="bigger lighter">新增通知群組</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            @using (Html.BeginForm("Create", null, FormMethod.Post, new { @ID = "CreateForm" }))
            {
                <table class="table table-bordered table-input">
                    <tr>
                        <th>@Html.LabelFor(x => x.FormInput.GroupType)</th>
                        <td>
                            <label>
                                @Html.RadioButtonFor(x => x.FormInput.GroupType, "1", new { @class = "ace", @checked = true })
                                <span class="lbl"> 異常通報</span>
                            </label>
                            <label>
                                @Html.RadioButtonFor(x => x.FormInput.GroupType, "2", new { @class = "ace" })
                                <span class="lbl"> 災損填報</span>
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-1">@Html.LabelFor(x => x.FormInput.Description)</th>
                        <td class="col-sm-11">
                            @Html.TextBoxFor(x => x.FormInput.Description, new { @class = "col-sm-6" })
                            <br />
                            @Html.ValidationMessageFor(x => x.FormInput.Description)
                        </td>
                    </tr>
                   
                </table>
            }
        </div>
    </div>
</div>


<div class="space"></div>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title">@Resources.Resource.NotifyUser</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main padding-4">
            @Html.Partial("_UserSelect")
        </div>
    </div>
</div>

<div class="space"></div>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title">副本通知人員</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main padding-4">
            @Html.Partial("_CCUserSelect")
        </div>
    </div>
</div>

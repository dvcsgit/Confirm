@model IEnumerable<Models.ASE.InventoryManagerManagement.GridItem>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            料庫負責人資料管理
        </h5>
        @if (ViewBag.CanCreate)
        {
            <div class="widget-toolbar">
                <a href="#" onclick="Create(); return false;">
                    <i class="ace-icon fa fa-plus white"></i>
                </a>
            </div>
        }
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:500px;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1 center"></th>
                        <th class="center">@Resources.Resource.Organization</th>
                        <th>料庫負責人</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    { 
                    <tr>
                        <td class="center">
                            <div class="action-buttons">
                                <a class="blue" href="#" onclick="Detail('@item.OrganizationUniqueID');" title="@Resources.Resource.Detail">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>

                                @if (ViewBag.CanEdit)
                                {
                                <a class="green" href="#" onclick="Edit('@item.OrganizationUniqueID');" title="@Resources.Resource.Edit">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                }

                                @if (ViewBag.CanDelete)
                                {
                                <a class="red" href="#" onclick="Delete('@item.OrganizationUniqueID');" title="@Resources.Resource.Delete">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                                }
                            </div>
                        </td>
                        <td>@item.OrganizationDescription</td>
                        <td>@item.Managers</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






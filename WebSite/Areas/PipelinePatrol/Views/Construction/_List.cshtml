@model Models.PipelinePatrol.Construction.GridViewModel

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SearchResults
        </h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow-x:scroll;">
            <table class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1"></th>
                        <th>@Resources.Resource.VHNO</th>
                        <th>@Resources.Resource.Description</th>
                        <th>@Resources.Resource.ConstructionFirm</th>
                        <th>@Resources.Resource.ConstructionType</th>
                        <th>@Resources.Resource.BeginDate</th>
                        <th>@Resources.Resource.EndDate</th>
                        <th>@Resources.Resource.Address</th>
                        <th>@Resources.Resource.CreateTime</th>
                        <th>@Resources.Resource.CreateUser</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                <div class="action-buttons">
                                    <a class="blue" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Detail">
                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                    </a>
                                </div>
                            </td>
                            <td>@item.VHNO</td>
                            <td>@item.Description</td>
                            <td>@item.ConstructionFirm</td>
                            <td>@item.ConstructionType</td>
                            <td>@item.BeginDate</td>
                            <td>@item.EndDate</td>
                            <td>@item.Address</td>
                            <td>@item.CreateTimeString</td>
                            <td>@item.CreateUser.User</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model Models.ASE.QS.CheckItemManagement.DetailViewModel

<p>
    @if (ViewBag.CanEdit)
    {
        <button class="btn btn-app btn-primary btn-xs" onclick="Edit('@Model.ID');" type="button">
            <i class="ace-icon fa fa-edit bigger-160"></i>
            @Resources.Resource.Edit
        </button>
    }

    @if (ViewBag.CanDelete)
    {
        <button class="btn btn-app btn-danger btn-xs" onclick="Delete('@Model.ID');" type="button">
            <i class="ace-icon fa fa-trash-o bigger-160"></i>
            @Resources.Resource.Delete
        </button>
    }

    <button class="btn btn-app btn-success btn-xs" onclick="Query();" type="button">
        <i class="ace-icon fa fa-ban bigger-160"></i>
        @Resources.Resource.Cancel
    </button>
</p>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="bigger lighter">稽核類別</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            <table class="table table-bordered table-input">
                <tr>
                    <th class="col-sm-1">@Html.LabelFor(x => x.ID)</th>
                    <td class="col-sm-11">@Html.DisplayFor(x => x.ID)</td>
                </tr>
                <tr>
                    <th class="col-sm-1">@Html.LabelFor(x => x.CDescription)</th>
                    <td class="col-sm-11">@Html.DisplayFor(x => x.CDescription)</td>
                </tr>
                <tr>
                    <th class="col-sm-1">@Html.LabelFor(x => x.EDescription)</th>
                    <td class="col-sm-11">@Html.DisplayFor(x => x.EDescription)</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="space"></div>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title">稽核項目</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow-x:scroll; min-height:150px;">
            <table id="CheckItemList" class="table table-striped table-bordered table-hover nowrap">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1 center">稽核項目代號</th>
                        <th class="col-sm-4">稽核項目中文描述</th>
                        <th class="col-sm-4">稽核項目英文描述</th>
                        <th class="col-sm-1 center">抽樣次數</th>
                        <th class="col-sm-1 center">單位</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    { 
                    <tr>
                        <td class="center">@item.ID</td>
                        <td>@item.CDescription</td>
                        <td>@item.EDescription</td>
                        <td class="center">@item.CheckTimes</td>
                        <td class="center">@item.Unit</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


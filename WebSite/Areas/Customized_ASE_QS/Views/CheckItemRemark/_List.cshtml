@model Models.ASE.QS.CheckItemRemarkManagement.GridViewModel

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SearchResults
        </h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1"></th>
                        <th class="col-sm-1 center">稽核類別代號</th>
                        <th class="col-sm-4">稽核類別中文描述</th>
                        <th class="col-sm-1 center">稽核項目代號</th>
                        <th class="col-sm-5">稽核項目中文描述</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                <div class="action-buttons">
                                    <a class="blue" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Detail">
                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                    </a>

                                    @if (ViewBag.CanEdit)
                                    {
                                        <a class="green" href="#" onclick="Edit('@item.UniqueID');" title="@Resources.Resource.Edit">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                            <td class="center">@item.CheckTypeID</td>
                            <td>@item.CheckTypeDescription</td>
                            <td class="center">@item.CheckItemID</td>
                            <td>@item.CheckItemDescription</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

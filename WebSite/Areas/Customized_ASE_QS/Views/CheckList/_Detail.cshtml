                                <tr>
                                    <td class="center">
                                        @if (checkResult != null)
                                        { 
                                        <label>@checkResult.Station</label>
                                        }
                                    </td>
                                    <td class="center">
                                        @if (checkResult != null)
                                        {
                                            <label>@checkResult.AuditObject</label>
                                        }
                                    </td>
                                    <td class="center">
                                        @if (checkResult != null)
                                        {
                                            <label>@checkResult.ResDepartmentDescription</label>
                                        }
                                    </td>

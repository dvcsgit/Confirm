@model Models.EquipmentMaintenance.EquipmentManagement.EditFormModel

@Html.Partial("_Scripts", Model.AncestorOrganizationUniqueID)

<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#EditForm");

        $('#PhotoUpload').ace_file_input({
            style: 'well',
            btn_choose: '',
            btn_change: '',
            droppable: false,
            thumbnail: 'fit'
        }).on('change', function (e) {
            var files = e.target.files;

            if (files.length > 0) {
                if (window.FormData !== undefined) {
                    var data = new FormData();

                    for (var x = 0; x < files.length; x++) {
                        data.append("file" + x, files[x]);
                    }

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("UploadPhoto")' + '?UniqueID=' + '@Model.UniqueID',
                        contentType: false,
                        processData: false,
                        data: data,
                        dataType: "json",
                        beforeSend: function () {
                            $.Overlay('show');
                        },
                        success: function (data) {
                            $.Overlay('hide');
                            $('#PhotoUpload').ace_file_input('reset_input');
                            if (data.IsSuccess) {
                                Edit('@Model.UniqueID');
                            }
                            else {
                                $.ErrorDialog(data.Message);
                            }
                        },
                        error: function (x, h, r) {
                            $.Overlay('hide');
                            $.ErrorDialog(x.responseText);
                        }
                    });
                }
                else {
                    $.InfoDialog('無法上傳');
                }
            }
            else {
                $.InfoDialog('請選擇檔案');
            }
        });
    });

    var DeletePhoto = function (uniqueID) {
        $.ConfirmDialog('@string.Format("{0} {1} ?", Resources.Resource.Confirm, Resources.Resource.Delete)', function (confirmed) {
            if (confirmed) {
                $.ajax({
                    type: "POST",
                    cache: false,
                    url: '@Url.Action("DeletePhoto")',
                    data: { UniqueID: uniqueID },
                    dataType: "json",
                    beforeSend: function () { $.Overlay('show'); },
                    success: function (data) {
                        $.Overlay('hide');

                        if (data.IsSuccess) {
                            Edit('@Model.UniqueID');
                        }
                        else {
                            $.ErrorDialog(data.Message);
                        }
                    },
                    error: function (x, h, r) {
                        $.Overlay('hide');
                        $.ErrorDialog(x.responseText);
                    }
                });
            }
        });
    };

    var Save = function () {
        var form = $('#EditForm');

        if (form.valid()) {
            $.ajax({
                type: "POST",
                cache: false,
                url: '@Url.Action("Edit")',
                data: form.serialize() + '&SpecPageStates=' + SpecPageState() + '&MaterialPageStates=' + MaterialPageState() + '&PartPageStates=' + PartPageState(),
                dataType: "json",
                beforeSend: function () { $.Overlay('show'); },
                success: function (data) {
                    $.Overlay('hide');

                    if (data.IsSuccess) {
                        Query();
                        $.SuccessDialog(data.Message);
                    }
                    else {
                        $.ErrorDialog(data.Message);
                    }
                },
                error: function (x, h, r) {
                    $.Overlay('hide');
                    $.ErrorDialog(x.responseText);
                }
            });
        }
    };
</script>

<p>
    <button class="btn btn-app btn-primary btn-xs" onclick="Save();" type="button">
        <i class="ace-icon fa fa-save bigger-160"></i>
        @Resources.Resource.Save
    </button>

    <button class="btn btn-app btn-success btn-xs" onclick="Detail('@Model.UniqueID');" type="button">
        <i class="ace-icon fa fa-ban bigger-160"></i>
        @Resources.Resource.Cancel
    </button>
</p>

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title">@Resources.Resource.Edit @Resources.Resource.Equipment</h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            @using (Html.BeginForm("Edit", null, FormMethod.Post, new { @ID = "EditForm" }))
            {
                @Html.HiddenFor(x => x.UniqueID)
                @Html.HiddenFor(x => x.OrganizationUniqueID)
                @Html.HiddenFor(x => x.MaintenanceOrganizationID)

                <table class="table table-bordered table-input">
                    <tr>
                        <th>@Html.LabelFor(x => x.ParentOrganizationFullDescription)</th>
                        <td colspan="3">@Html.DisplayFor(x => x.ParentOrganizationFullDescription)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-1">@Html.LabelFor(x => x.FormInput.ID)</th>
                        <td class="col-sm-5">
                            @Html.TextBoxFor(x => x.FormInput.ID, new { @class = "col-sm-11" })
                            <br />
                            @Html.ValidationMessageFor(x => x.FormInput.ID)
                        </td>
                        <th class="col-sm-1">@Html.LabelFor(x => x.FormInput.Name)</th>
                        <td class="col-sm-5">
                            @Html.TextBoxFor(x => x.FormInput.Name, new { @class = "col-sm-11" })
                            <br />
                            @Html.ValidationMessageFor(x => x.FormInput.Name)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(x => x.FormInput.MaintenanceOrganizationUniqueID)</th>
                        <td colspan="3">
                            @Html.HiddenFor(x => x.FormInput.MaintenanceOrganizationUniqueID)
                            <div class="input-group">
                                <input class="form-control" id="MaintenanceOrganization" type="text" readonly="readonly" value="@Model.MaintenanceOrganization">
                                @Html.Partial("_MaintenanceOrganizationSelect")
                            </div>
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <tr>
                            <td colspan="4">

                                <span class="profile-picture">
                                    <a onclick="DeletePhoto('@Model.UniqueID');">     <img class="img-responsive" style="max-height:200px;" alt="" src="@Url.Content(string.Format("~/EquipmentPatrolPhoto/{0}?t={1}", Model.Photo, Guid.NewGuid().ToString()))" /></a>
</span>
                            </td>
                        </tr>

                    }
                    <tr>
                        <td colspan="4">
                            <input type="file" id="PhotoUpload" style="height:35px;" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>


@model Models.EquipmentMaintenance.TimeSpanAbnormalReasonManagement.GridViewModel

<script type="text/javascript">
    $(document).ready(function () {

        $('#dataTable').DataTable({
            "oLanguage": {
                "sUrl": "@Url.Content("~/Content/dataTables.zh_tw.txt")"
            },
            "scrollX": true,
            "searching": false,
            "order": [[1, "asc"]],
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "全部"]],
            "aoColumnDefs": [{ "bSortable": false, "aTargets": [0] }]
        });
    });
</script>


<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Resources.Resource.SearchResults
        </h5>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1"></th>
                        <th>@Resources.Resource.AbnormalReasonID</th>
                        <th>@Resources.Resource.AbnormalReasonDescription</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                <div class="action-buttons">
                                    <a class="blue" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Detail">
                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                    </a>

                                    @if (ViewBag.CanEdit)
                                    {
                                        <a class="green" href="#" onclick="Edit('@item.UniqueID');" title="@Resources.Resource.Edit">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                    }

                                    @if (ViewBag.CanDelete)
                                    {
                                        <a class="red" href="#" onclick="Delete('@item.UniqueID');" title="@Resources.Resource.Delete">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                            <td>@item.ID</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

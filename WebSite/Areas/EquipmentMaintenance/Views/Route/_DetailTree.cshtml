@model System.String

<script type="text/javascript">
    $(function () {
        $('#divDetailTree').jstree({
            "core": { animation: 0 },
            "json_data": {
                "data": [@(Html.Raw(Model))],
                "ajax": {
                    "url": '@Url.Action("GetDetailTreeItem")',
                    'cache': false,
                    "data": function (n) {
                        return {
                            RouteUniqueID: n.attr("@Utility.Define.EnumTreeAttribute.RouteUniqueID"),
                            ControlPointUniqueID: n.attr("@Utility.Define.EnumTreeAttribute.ControlPointUniqueID"),
                            EquipmentUniqueID: n.attr("@Utility.Define.EnumTreeAttribute.EquipmentUniqueID"),
                            PartUniqueID: n.attr("@Utility.Define.EnumTreeAttribute.PartUniqueID")
                        };
                    }
                }
            },
            "animation": 0,
            "plugins": ["themes", "json_data", "ui"],
            "themes": { "theme": "apple", "dots": true, "icons": false },
            "ui": { "select_limit": 1 }
        }).bind("hover_node.jstree", function (e, data) {
            var tooltip = data.rslt.obj.attr("@Utility.Define.EnumTreeAttribute.ToolTip");

            if (tooltip != '') {
                var a = data.rslt.obj.find('a:first');

                a.tooltip({
                    'title': tooltip
                });

                a.tooltip('show');
            }

            e.preventDefault();
        }).bind("load_node.jstree", function (e, data) {
            $('.jstree-apple li[nodetype="@Utility.Define.EnumTreeNodeType.ControlPoint"]').find('a:first ins').addClass('fa fa-rss-square red').removeClass('jstree-icon');
            $('.jstree-apple li[nodetype="@Utility.Define.EnumTreeNodeType.Equipment"]').find('a:first ins').addClass('fa fa-cogs red').removeClass('jstree-icon');
            $('.jstree-apple li[nodetype="@Utility.Define.EnumTreeNodeType.EquipmentPart"]').find('a:first ins').addClass('fa fa-cog red').removeClass('jstree-icon');
            $('.jstree-apple li[nodetype="@Utility.Define.EnumTreeNodeType.CheckItem"]').find('a:first ins').addClass('fa fa-check-square-o red').removeClass('jstree-icon');

            e.preventDefault();
        });
    });
</script>

<div id="divDetailTree"></div>

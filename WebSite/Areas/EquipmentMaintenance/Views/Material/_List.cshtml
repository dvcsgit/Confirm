@model Models.EquipmentMaintenance.MaterialManagement.GridViewModel

<script type="text/javascript">
    $(document).ready(function () {
        $('#All').click(function () {
            if ($(this).prop('checked')) {
                $('.Material').prop('checked', true);
            }
            else {
                $('.Material').prop('checked', false);
            }
        });

        $('#dataTable').DataTable({
            "oLanguage": {
                "sUrl": "@Url.Content("~/Content/dataTables.zh_tw.txt")"
        },
                   "scrollX": true,
                   "searching": false,
                   "order": [[2, "asc"]],
                  "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "全部"]],
                  "aoColumnDefs": [{ "bSortable": false, "aTargets": [0, 1] }]
    });
    });

    var QRCode = function () {
        var selecteds = [];
        $('.Material').each(function () {
            if ($(this).prop('checked')) {
                selecteds.push($(this).val());
            }
        });
        if (selecteds.length == 0) {
            $.InfoDialog('@string.Format("{0} {1}", Resources.Resource.SelectOne, Resources.Resource.Material)')
        }
        else {
            $.ajax({
                type: "POST",
                cache: false,
                url: '@Url.Action("ExportQRCode")',
                data: { Selecteds: JSON.stringify(selecteds) },
                dataType: "json",
                beforeSend: function () { $.Overlay('show'); },
                success: function (data) {
                    $.Overlay('hide');
                    if (data.success) {
                        $("body").append("<iframe src='" + data.data + "' style='display: none;' ></iframe>");
                    }
                    else {
                        $.ErrorDialog(data.errors);
                    }
                },
                error: function (x, h, r) {
                    $.Overlay('hide');
                }
            });


        }
    };
</script>

@if (Model.Permission == Utility.Define.EnumOrganizationPermission.Editable)
{ 
    if (ViewBag.CanCreate)
    {
        <div class="btn-group">
            <button class="btn btn-primary" onclick="Create('@Model.OrganizationUniqueID', '@Model.EquipmentType');">
                <i class="ace-icon fa fa-plus"></i>
                @Resources.Resource.Create @Resources.Resource.Material @Resources.Resource.At @Model.OrganizationDescription
            </button>
        </div>
    }

    if (ViewBag.CanDelete && Model.ItemList.Count > 0)
    {
        <div class="btn-group">
            <button class="btn btn-danger" onclick="Delete('');">
                <i class="ace-icon fa fa-trash-o"></i>
                @Resources.Resource.Delete
            </button>
        </div>
    }
}

<div class="widget-box widget-color-dark">
    <div class="widget-header">
        <h5 class="widget-title bigger lighter">
            @Model.FullOrganizationDescription
        </h5>
        <div class="widget-toolbar">
            <a href="#" onclick="QRCode(); return false;">
                <i class="ace-icon fa fa-qrcode white"></i>
            </a>
        </div>
    </div>

    <div class="widget-body">
        <div class="widget-main no-padding" style="overflow:scroll; max-height:500px;">
            <table class="table table-striped table-bordered table-hover nowrap" id="dataTable">
                <thead class="thin-border-bottom">
                    <tr>
                        <th class="col-sm-1  center">
                            @if (Model.Permission == Utility.Define.EnumOrganizationPermission.Editable)
                            {
                                <label>
                                    <input id="All" class="ace ace-checkbox-2" type="checkbox">
                                    <span class="lbl"></span>
                                </label>
                            }
                        </th>
                        <th class="col-sm-1 center"></th>
                        <th>@Resources.Resource.ParentOrganization</th>
                        <th>@Resources.Resource.MaterialType</th>
                        <th>@Resources.Resource.MaterialID</th>
                        <th>@Resources.Resource.MaterialName</th>
                        <th>@Resources.Resource.QTY</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemList)
                    {
                        <tr>
                            <td class="col-sm-1 center">
                                @if (Model.Permission == Utility.Define.EnumOrganizationPermission.Editable && item.Permission == Utility.Define.EnumOrganizationPermission.Editable)
                                {
                                    <label>
                                        <input class="ace ace-checkbox-2 Material" type="checkbox" value="@item.UniqueID">
                                        <span class="lbl"></span>
                                    </label>
                                }
                            </td>
                            <td class="col-sm-1 center">
                                <div class="action-buttons">
                                    <a class="blue" href="#" onclick="Detail('@item.UniqueID');" title="@Resources.Resource.Detail">
                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                    </a>

                                    @if (item.Permission == Utility.Define.EnumOrganizationPermission.Editable)
                                    {
                                        if (ViewBag.CanEdit)
                                        {
                                            <a class="green" href="#" onclick="Edit('@item.UniqueID');" title="@Resources.Resource.Edit">
                                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                                            </a>

                                            if (ViewBag.CanCreate)
                                            {
                                                <a class="orange2" href="#" onclick="Copy('@item.UniqueID');" title="@Resources.Resource.Copy">
                                                    <i class="ace-icon fa fa-copy bigger-130"></i>
                                                </a>
                                            }
                                        }

                                        if (ViewBag.CanDelete)
                                        {
                                            <a class="red" href="#" onclick="Delete('@item.UniqueID');" title="@Resources.Resource.Delete">
                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                            </a>
                                        }
                                    }
                                </div>
                            </td>
                            <td>@item.OrganizationDescription</td>
                            <td>@item.EquipmentType</td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






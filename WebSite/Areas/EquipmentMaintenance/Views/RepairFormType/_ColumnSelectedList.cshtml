@model IEnumerable<Models.EquipmentMaintenance.RepairFormTypeManagement.ColumnModel>

<table class="table table-striped table-bordered table-hover nowrap" id="tableColumn">
    <thead class="thin-border-bottom">
        <tr>
            <th class="col-sm-1"></th>
            <th class="col-sm-2">@Resources.Resource.RepairFormColumnDescription</th>
            <th class="col-sm-9">@Resources.Resource.Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="center">
                    <input type="hidden" class="Column" value="@item.UniqueID" />
                    <div class="action-buttons">
                        <a class="red" href="#" onclick="DeleteColumn('@item.UniqueID'); return false;" title="@Resources.Resource.Delete">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>
                </td>
                <td>@item.Description</td>
                <td>@item.Options</td>
            </tr>
        }
    </tbody>

</table>
